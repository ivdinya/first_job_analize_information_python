#проверка является ли число простым
def is_prime(n):
    if n <= 1:
        return False
    if n == 2:
        return True
    if n % 2 == 0:
        return False
    for i in range(3, int(n**0.5)+1, 2):
        if n % i == 0:
            return False
    return True







a = (i for i in range(1,1000))
for i in a:
    if is_prime(i) == False:
        continue
    if is_prime(i) == True:
        print("Простое число:",i,"","Ближайшее натуральное число: ", i-1)
